<?xml version='1.0' encoding='utf-8'?>
<widget id="com.libreappfoundation.fahm" version="1.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Fahm</name>
    <description>
        A simple app for gathering useful islamic resources in YouTube.
    </description>
    <author email="apps.niyasc@gmail.com" href="https://libreappfoundation.github.io">
        LibreAppFoundation
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="mdpi" src="res/mipmap-mdpi/fahm.png" />
        <icon density="hdpi" src="res/mipmap-hdpi/fahm.png" />
        <icon density="xhdpi" src="res/mipmap-xhdpi/fahm.png" />
        <icon density="xxhdpi" src="res/mipmap-xxhdpi/fahm.png" />
        <icon density="xxxhdpi" src="res/mipmap-xxxhdpi/fahm.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <splash src="res/splash.png" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreen" value="false" />
    <plugin name="cordova-plugin-insomnia" spec="git+https://github.com/EddyVerbruggen/Insomnia-PhoneGap-Plugin.git" />
</widget>
